# OpenAI API Configuration (for embeddings only)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_EMBED_MODEL=text-embedding-3-large

# OpenRouter API Configuration (for chat and OCR)
OPENROUTER_API_KEY=sk-or-your-openrouter-api-key-here
OPENROUTER_CHAT_MODEL=openai/gpt-5.1
OPENROUTER_OCR_MODEL=qwen/qwen-2-vl-7b-instruct

# Pinecone Configuration
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_INDEX_NAME=cook-islands-legislation
PINECONE_CLOUD=aws
PINECONE_REGION=us-east-1

# Application Security
APP_SECRET=change-this-to-a-random-secret-key
API_KEY=your-api-key-for-protected-endpoints
AUTH_CODE=strategyday  # Authentication code for chat access

# Session Cookie Settings
SESSION_COOKIE_SECURE=false  # Set to 'true' in production with HTTPS

# Data Directories (defaults shown, override if needed)
WORKING_DIR=/data/rag_storage
LEGISLATION_DIR=/data/legislation
MARKDOWN_DIR=/data/markdown
CONFIG_PATH=/data/config.json
METADATA_DB_PATH=/data/metadata.db

# Optional: Logging
LOG_LEVEL=INFO

# Max tool calls the model is permitted to perform
MAX_TOOL_ITERATIONS